@page "/"
@page "/index"

<PageTitle>Index</PageTitle>

<MudContainer Class="mt-16">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">My first SWA!</MudText>
        <MudCard Elevation="3"> 
            <MudCardHeader>
                <CardHeaderContent>
                        <MudText Align="Align.Center" Typo="Typo.h4">Get all todos using @Configuration["Message"]</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
            @if(AllTodos is null)
            {
                <MudText Typo="Typo.h4" Align="Align.Center">
                Nothing to show!</MudText>
            }
            else
            {
                @foreach(var todo in AllTodos)
                {
                    <MudList>
                        <MudListItem>
                            <MudCheckBox @bind-Checked="todo.IsCompleted" Size="Size.Large">@todo.Text</MudCheckBox>
                        </MudListItem>
                    </MudList>
                }

            }
                </MudCardContent>
    </MudCard>
</MudContainer>




