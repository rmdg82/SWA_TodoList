@page "/"
@page "/index"

<PageTitle>Blazor - Todo List</PageTitle>

<MudContainer Class="mt-16 mb-10">
    <MudButton Class="mx-auto pa-6" OnClick="ResetDb" Variant="Variant.Filled" Color="Color.Error" Size="Size.Large">Reset Db</MudButton>
    <MudGrid>

        <!-- Add todo card -->
        <MudItem xs="12" >
            <MudCard Elevation="3">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudGrid>
                            <MudItem md="1" >
                                <MudIcon Icon="@Icons.TwoTone.PlaylistAdd" Style="font-size: 4rem;" Color="Color.Primary"/> 
                            </MudItem>
                            <MudItem md="11" >
                                <MudText Align="Align.Start" Typo="Typo.h3" Color="Color.Primary">Add Item</MudText>
                            </MudItem>
                        </MudGrid>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudDivider DividerType="DividerType.Middle" />
                <MudCardContent>
                    <MudTextField AutoFocus @bind-Value="NewTodoText" Variant="Variant.Outlined" Label="Insert a new todo" Adornment="Adornment.End" AdornmentIcon="@Icons.Sharp.AddCircle" OnAdornmentClick="AddTodo"></MudTextField>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Todo list card-->
        <MudItem xs="12">
            <MudCard Elevation="3">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudGrid>
                            <MudItem md="1">
                                <MudIcon Icon="@Icons.TwoTone.Checklist" Style="font-size: 4rem;" Color="Color.Warning"/> 
                            </MudItem>
                            <MudItem md="11">
                                <MudText Align="Align.Start" Typo="Typo.h3" Color="Color.Warning">Todo list</MudText>
                            </MudItem>
                        </MudGrid>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudDivider DividerType="DividerType.Middle" />
                <MudCardContent>
                    @if(AllTodos is null)
                    {
                        <MudText Align="Align.Center" Typo="Typo.h4" Color="Color.Primary">Loading todos...</MudText>
                        <MudProgressLinear  Color="Color.Primary" Indeterminate="true" Size="Size.Large" Class="my-7"/>
                    }
                    else
                    {
                        @foreach(var todo in AllTodos)
                        {
                            @if (!todo.IsCompleted)
                                {
                                    <MudGrid>
                                        <MudItem xs="1">
                                            <MudIconButton Icon="@Icons.Filled.CheckBoxOutlineBlank" Size="Size.Large" OnClick="() => CompleteTodo(todo.Id)"></MudIconButton>
                                        </MudItem>
                                        <MudItem xs="9" Class="d-flex align-center">
                                            <MudTooltip Arrow="true">
                                                <ChildContent>
                                                    <MudText Typo="Typo.h5">@todo.Text</MudText>
                                                </ChildContent>
                                                <TooltipContent>
                                                    <MudText>Added on '@todo.CreatedAt'</MudText>
                                                </TooltipContent>
                                            </MudTooltip>
                                        </MudItem>
                                        <MudItem xs="1">
                                            <MudIconButton Color="Color.Info" Icon="@Icons.Filled.Create" Size="Size.Large" OnClick="ShowMessage"> </MudIconButton>
                                        </MudItem>
                                        <MudItem xs="1">
                                            <MudIconButton Color="Color.Error" Icon="@Icons.Filled.Delete" Size="Size.Large" OnClick="() => DeleteTodo(todo.Id)"> </MudIconButton>
                                        </MudItem>
                                    </MudGrid>
                                }
                        }
                    }
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Completed card-->
        <MudItem xs="12">
            <MudCard Elevation="3">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudGrid>
                            <MudItem md="1">
                                <MudIcon Icon="@Icons.Filled.DoneOutline" Style="font-size: 4rem;" Color="Color.Success"/> 
                            </MudItem>
                            <MudItem md="11">
                                <MudText Align="Align.Start" Typo="Typo.h3" Color="Color.Success">Completed</MudText>
                            </MudItem>
                        </MudGrid>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudDivider DividerType="DividerType.Middle" />
                <MudCardContent>
                    @if(AllTodos is not null)
                    {
                        @foreach(var todo in AllTodos)
                        {
                            @if (todo.IsCompleted)
                            {
                                <MudGrid>
                                    <MudItem xs="1">
                                        <MudIconButton Icon="@Icons.Filled.CheckCircle" Color="Color.Success" Size="Size.Large"></MudIconButton>
                                    </MudItem>
                                    <MudItem xs="10" Class="d-flex align-center">
                                            <MudTooltip Arrow="true">
                                                <ChildContent>
                                                    <MudText Typo="Typo.h5">@todo.Text</MudText>
                                                </ChildContent>
                                                <TooltipContent>
                                                    <MudText >Completed on '@todo.CompletedAt'</MudText>
                                                </TooltipContent>
                                            </MudTooltip>
                                        </MudItem>
                                    <MudItem xs="1">
                                        <MudIconButton Color="Color.Error" Icon="@Icons.Filled.Delete" Size="Size.Large" OnClick="() => DeleteTodo(todo.Id)"> </MudIconButton>
                                    </MudItem>
                                </MudGrid>
                            }
                        }
                    }
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>




