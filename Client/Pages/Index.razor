@page "/"
@page "/index"
@using SharedLibrary

<PageTitle>Blazor - Todo List</PageTitle>

<MudContainer Class="mt-10 mb-10">
    
    <MudGrid>

        <!-- Add todo card -->
        <MudItem xs="12" >
            <MudCard Elevation="3" id="add-todo-card" >
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudGrid>
                            <MudItem md="1" >
                                <MudIcon Icon="@Icons.TwoTone.PlaylistAdd" Style="font-size: 4rem;" Color="Color.Primary"/> 
                            </MudItem>
                            <MudItem md="11" >
                                <MudText Align="Align.Start" Typo="Typo.h3" Color="Color.Primary">Add Item</MudText>
                            </MudItem>
                        </MudGrid>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudDivider DividerType="DividerType.Middle" />
                <MudCardContent>
                    <MudTextField T="string" Counter="ValidationConstants.maxLengthOnAdd" @onkeydown="AddTodoAfterEnter" Immediate="true" Validation="ValidationFunc" AutoFocus @bind-Value="NewTodoText" Variant="Variant.Outlined" Label="Insert a new todo" Adornment="Adornment.End" AdornmentIcon="@Icons.Sharp.AddCircle" OnAdornmentClick="AddTodo"></MudTextField>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Todo list card-->
        <MudItem xs="12">
            <MudCard Elevation="3" id="list-todo-card">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudGrid>
                            <MudItem md="1">
                                <MudIcon Icon="@Icons.TwoTone.Checklist" Style="font-size: 4rem;" Color="Color.Warning"/> 
                            </MudItem>
                            <MudItem md="11">
                                <MudText Align="Align.Start" Typo="Typo.h3" Color="Color.Warning">Todo list</MudText>
                            </MudItem>
                        </MudGrid>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudDivider DividerType="DividerType.Middle" />
                <MudCardContent>
                    @if(AllTodos is null)
                    {
                        <MudText Align="Align.Center" Typo="Typo.h4" Color="Color.Primary">Loading todos...</MudText>
                        <MudProgressLinear  Color="Color.Primary" Indeterminate="true" Size="Size.Large" Class="my-7"/>
                    }
                    else
                    {
                        @foreach(var todo in AllTodos)
                        {
                            @if (!todo.IsCompleted)
                                {
                                    <MudGrid>
                                        <MudItem xs="2" md="1">
                                            <MudIconButton Icon="@Icons.Filled.CheckBoxOutlineBlank" Size="Size.Large" OnClick="() => CompleteTodo(todo.Id)"></MudIconButton>
                                        </MudItem>
                                        <MudItem xs="6" md="9" Class="d-flex align-center">
                                            <MudTooltip Arrow="true">
                                                <ChildContent>
                                                    <MudText Typo="Typo.body1">@todo.Text</MudText>
                                                </ChildContent>
                                                <TooltipContent>
                                                    <MudText>Added on '@todo.CreatedAt'</MudText>
                                                </TooltipContent>
                                            </MudTooltip>
                                        </MudItem>
                                        <MudItem xs="1" md="1">
                                            <MudIconButton Color="Color.Info" Icon="@Icons.Filled.Create" Size="Size.Large" OnClick="() => UpdateTodo(todo)"> </MudIconButton>
                                        </MudItem>
                                        <MudItem xs="1" md="1">
                                            <MudIconButton Color="Color.Error" Icon="@Icons.Filled.Delete" Size="Size.Large" OnClick="() => DeleteTodo(todo.Id)"> </MudIconButton>
                                        </MudItem>
                                    </MudGrid>
                                }
                        }
                    }
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Completed card-->
        <MudItem xs="12">
            <MudCard Elevation="3" id="completed-todo-card">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudGrid>
                            <MudItem md="1">
                                <MudIcon Icon="@Icons.Filled.DoneOutline" Style="font-size: 4rem;" Color="Color.Success"/> 
                            </MudItem>
                            <MudItem md="11">
                                <MudText Align="Align.Start" Typo="Typo.h3" Color="Color.Success">Completed</MudText>
                            </MudItem>
                        </MudGrid>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudDivider DividerType="DividerType.Middle" />
                <MudCardContent>
                    @if(AllTodos is not null)
                    {
                        @foreach(var todo in AllTodos)
                        {
                            @if (todo.IsCompleted)
                            {
                                <MudGrid>
                                    <MudItem xs="2" md="1">
                                        <MudIconButton Icon="@Icons.Filled.CheckCircle" Color="Color.Success" Size="Size.Large"></MudIconButton>
                                    </MudItem>
                                    <MudItem xs="7" md="10" Class="d-flex align-center">
                                            <MudTooltip Arrow="true">
                                                <ChildContent>
                                                    <MudText Typo="Typo.body1">@todo.Text</MudText>
                                                </ChildContent>
                                                <TooltipContent>
                                                    <MudText >Completed on '@todo.CompletedAt'</MudText>
                                                </TooltipContent>
                                            </MudTooltip>
                                        </MudItem>
                                    <MudItem xs="1" md="1">
                                        <MudIconButton Color="Color.Error" Icon="@Icons.Filled.Delete" Size="Size.Large" OnClick="() => DeleteTodo(todo.Id)"> </MudIconButton>
                                    </MudItem>
                                </MudGrid>
                            }
                        }
                    }
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12">
            <MudButton Link="/.auth/login/github" Color="Color.Primary" Variant="Variant.Filled" EndIcon="@Icons.Custom.Brands.GitHub">Login</MudButton>
            <MudButton Link="/.auth/logout" Color="Color.Secondary" Variant="Variant.Outlined" EndIcon="@Icons.Custom.Brands.GitHub">Logout</MudButton>
            <MudButton Link="/.auth/me" Color="Color.Tertiary" Variant="Variant.Text" EndIcon="@Icons.Custom.Brands.GitHub">User data</MudButton>
        </MudItem>
        
        @if(HostEnvironment!.Environment == "Development")
        {
            <MudItem xs="12"> 
                <MudButton FullWidth="true" OnClick="ResetDb" Variant="Variant.Filled" Color="Color.Error" Size="Size.Large">Reset Db</MudButton>
            </MudItem>
        }
    </MudGrid>
</MudContainer>
