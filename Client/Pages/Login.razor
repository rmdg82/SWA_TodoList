@page "/login"

@attribute [AllowAnonymous]
<PageTitle>Todo List - Login</PageTitle>
<MudContainer Class="mt-10 mb-10" MaxWidth="MaxWidth.Small">
    <MudGrid >
        <MudItem xs="12">
            <MudCard Elevation="3" >
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudGrid>
                            <MudItem md="2" >
                                <MudIcon Icon="@Icons.TwoTone.Login" Style="font-size: 4rem;" Color="Color.Primary"/> 
                            </MudItem>
                            <MudItem md="10" >
                                <MudText Align="Align.Start" Typo="Typo.h3" Color="Color.Primary">Login</MudText>
                            </MudItem>
                        </MudGrid>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudDivider DividerType="DividerType.Middle" />
                <MudCardContent>
                    <MudGrid>
                        <MudItem xs="12">
                            <MudButton Link="/.auth/login/github" Color="Color.Default" FullWidth="true" StartIcon="@Icons.Custom.Brands.GitHub" Variant="Variant.Filled" Size="Size.Large">Login with GitHub</MudButton>
                        </MudItem>
                        <MudItem xs="12">
                            <MudButton Link="/.auth/login/aad" Color="Color.Dark" FullWidth="true" StartIcon="@Icons.Custom.Brands.Microsoft" Variant="Variant.Filled"  Size="Size.Large">Login with Microsoft</MudButton>
                        </MudItem>
                        <MudItem xs="12">
                            <MudButton Link="/.auth/login/twitter" Color="Color.Info" FullWidth="true" StartIcon="@Icons.Custom.Brands.Twitter" Variant="Variant.Filled"  Size="Size.Large">Login with Twitter</MudButton>
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>
